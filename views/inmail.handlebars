<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="title">
                <h2>Send Internal Notification</h2>
            </div>
            
            <form action="" method="POST">
                <div class="form-group">
                    <label>To:</label>
                    <input type="email" class="form-control" value="All-Offices">
                </div>
                <div class="form-group">
                    <label>Subject:</label>
                    <input type="text" class="form-control" value="{{ records.title }}">
                </div>
                <div class="form-group">
                    <label>Body:</label>
                    <textarea class="form-control" rows="5">Dear Team {{ records.description }}</textarea>
                </div>
                <div class="form-group">
                    <label>Sent By:</label>
                    <input type="text" class="form-control" value="{{ records.incharge }}">
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>
